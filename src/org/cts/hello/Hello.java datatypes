package org.cts.hello;

import java.util.Scanner;

public class Hello {
	

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner s1 = new Scanner(System.in);
   System.out.println("please enter the byte value");
   byte b = s1.nextByte();
   System.out.println("byte value is" +b);
   
   System.out.println("please enter the short value");
   short s =s1.nextShort();
   System.out.println("short value is" + s);
   
   System.out.println("please enter the double value");
   double d =s1.nextDouble();
   System.out.println("double value is" + d);
   
   System.out.println("please enter the long value");
   long l =s1.nextLong();
   System.out.println("long value is" + l);
   
   System.out.println("please enter the boolean value");
   boolean b1 = s1.hasNext();
   System.out.println("boolean value is" + b1);
   
  
   
   
	}

}
